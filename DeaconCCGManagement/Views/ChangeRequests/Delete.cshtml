@using DeaconCCGManagement.Helpers
@using DeaconCCGManagement.Models
@model DeaconCCGManagement.Models.ChangeRequest

@{
    ViewBag.Title = "Delete";
}

@Html.Partial("_Breadcrumbs", "Delete Change Request")

<h2>@ViewBag.Title<small> Change Request</small></h2>

<h3>Are you sure you want to delete this change request?</h3>
<div>

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayName("CR Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CRDate)
        </dd>

        <dt>
            @Html.DisplayName("Deacon")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Deacon.FullName)
        </dd>

        <dt>
            @Html.DisplayName("Member")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CcgMember.FirstName)
            @Html.DisplayFor(model => model.CcgMember.LastName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }

@Html.Partial("_BackToListLink")

</div>

@section scripts{
    @Scripts.Render("~/Scripts/App/GetBackToListUrl.js")
}