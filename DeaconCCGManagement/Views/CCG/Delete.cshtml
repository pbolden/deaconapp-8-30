@using DeaconCCGManagement.Helpers
@using DeaconCCGManagement.Models
@model DeaconCCGManagement.ViewModels.CCGViewModel

@{
    ViewBag.Title = "Delete";
}

@Html.Partial("_Breadcrumbs", "Delete Breadcrumb")

<h2>Delete<small> CCG</small></h2>

<h3><span class="danger bg-danger">Warning!</span></h3>
<p class="alert alert-danger">
    Are you sure you want to delete this CCG?
    This may cause problems if deacons and members
    are assigned to it. Make sure no deacons and members
    are assigned to this CCG before deleting.
</p>
<div>

    <div class="well well-md">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CCGName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CCGName)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        }

    </div>

   
    @Html.Partial("_BackToListLink")
   
</div>

@section scripts{
    @Scripts.Render("~/Scripts/App/GetBackToListUrl.js")
}