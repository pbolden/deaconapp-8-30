@model DeaconCCGManagement.ViewModels.FilterMembersGroup
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="well input-group">

                <div>
                    @if (Model.FilterCCGs)
                    {
                        @Html.DropDownList("CcgId", Model.CCGs, new {id=@Model.CCGs.SelectedValue})
                        <text>&nbsp;</text>
                    }
                </div>
                <p></p>

                @Html.EnumDropDownListFor(pr => Model.MemberFilter,
                    new {Name = "memberFilter"})
                &nbsp;

                <button type="submit" class="btn btn-default btn-xs">
                    <span class="glyphicon glyphicon-filter"></span>
                </button>
            </div>
        </div>
    </div>
</div>

